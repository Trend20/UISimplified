{
  "manifest_version": 3,
  "name": "Looper",
  "short_name": "looper",
  "version": "1.0.0",
  "description": "Managing bookmarks made easy",
  "action": {
    "default_popup": "index.html",
    "default_title": "Looper",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}